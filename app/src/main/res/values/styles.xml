<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.AppTheme">
    </style>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="OverFlowMenuTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="overlapAnchor">false</item>
    </style>

    <!--普通textView Style-->
    <!--字体：黑-->
    <style name="text_view_normal">
        <item name="android:text">@string/placeholder_medium</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <!--普通imageView Style-->
    <!--默认图片：icon -->
    <style name="image_view_weather_icon">
        <item name="android:src">@mipmap/ic_launcher</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
    </style>

</resources>
